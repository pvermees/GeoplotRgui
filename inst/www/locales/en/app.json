{
  "title": "GeoplotR",
  "homelink": "https://www.ucl.ac.uk/~ucfbpve/",
  "functions": {
    "TiZrY": {
      "name": "Ti-Zr-Y",
      "help": "Ti-Zr-Y tectonic discrimination diagram"
    },
    "TAS": {
      "name": "TAS",
      "help": "Total Alkali Silica diagram"
    },
    "AFM": {
      "name": "AFM",
      "help": "A-F-M diagram"
    },
    "ATM": {
      "name": "ATM",
      "help": "A-T-M diagram"
    }
  },
  "params" : {
    "Ti": {
      "name": "Ti",
      "help": "Titanium (ppm) or TiO₂ (weight %) concentrations"
    },
    "Zr": {
      "name": "Zr",
      "help": "Zirconium concentrations (ppm)"
    },
    "Y": {
      "name": "Y",
      "help": "Yttrium concentrations (ppm)"
    },
    "tizry_type": {
      "name": "Analysis type",
      "help": "Type of analysis; LDA, QDA or Pearce"
    },
    "tizry_plot": {
      "name": "Plot type",
      "help": "Type of diagram to produce"
    },
    "Na2O": {
      "name": "Na₂O",
      "help": "concentrations of Na₂O"
    },
    "K2O": {
      "name": "K₂O",
      "help": "concentrations of K₂O"
    },
    "SiO2": {
      "name": "SiO₂",
      "help":"concentrations of SiO₂"
    },
    "volcanic": {
      "name": "Volcanic",
      "help": "Volcanic (not plutonic) sample"
    },
    "ternaryLogratio": {
      "name": "Ternary",
      "help": "Ternary or logratio plot"
    },
    "twoStage": {
      "name": "Two stage",
      "help": "Applies the two-stage magma evolution model of Vermeesch and Pease (2021), rather than the single-stage model"
    },
    "kde": {
      "name": "KDE",
      "help": "Adds a kernel density estimate of the Bowen-Fenner indices on a radial scale (only for Logratio plot)"
    },
    "boxType": {
      "name": "Box type",
      "help": "Which boundaries of the plot to draw (only for Logratio plot)"
    },
    "bandwidth": {
      "name": "Bandwidth",
      "help": "The smoothing bandwidth to be used for the kernel density estimate"
    },
    "vermeeschPease": {
      "name": "Decision",
      "help": "Adds the decision boundary between the tholeiitic and calc-alkaline magma series to the plot (only for Ternary plot)"
    }
  },
  "optiongroups": {
    "plot": {
      "@title": {
        "name": "Plot options",
        "help": "Options controlling how the plot looks"
      },
      "lwd": {
        "name": "Point line width",
        "help": "The line width the points are drawn with, default is 1.0"
      },
      "cex": {
        "name": "Point size",
        "help": "Magnification factor for the points"
      },
      "pch": {
        "name": "Point symbol",
        "help": "Plotting symbol to use. Between 0 and 25 for standard symbols or 32 and 127 for ASCII characters"
      },
      "bg": {
        "name": "Secondary point color",
        "help": "Symbols between 21 and 25 have two colours; this is the second one."
      },
      "col": {
        "name": "Point colour",
        "help": "Main colour of the points drawn"
      }
    },
    "decisionLine": {
      "@title": {
        "name": "Decision boundary options",
        "help": "Options controlling the look of the decision boundary for AFM or ATM diagrams"
      },
      "dlty": {
        "name": "Line type"
      },
      "dlwd": {
        "name": "Line width"
      },
      "dcol": {
        "name": "Line colour"
      }
    }
  },
  "types": {
    "tizry_plot": {
      "none": {
        "name": "None",
        "help": "Produces no plot"
      },
      "ternary": {
        "name": "Ternary",
        "help": "Ternary diagram"
      },
      "logratio": {
        "name": "Logratio",
        "help": "Bivariate logratio plot"
      }
    },
    "tizry_type": {
      "LDA": {
        "name": "LDA",
        "help": "Linear Discriminant Analysis"
      },
      "QDA": {
        "name": "QDA",
        "help": "Quadratic Discriminant Analysis"
      },
      "Pearce": {
        "name": "Pearce",
        "help": "The nominal decision boundaries of Pearce and Cann (1973)"
      }
    },
    "proportion": {
      "wt%": {
        "name": "weight %",
        "help": "percentage by weight"
      },
      "ppm": {
        "name": "ppm",
        "help": "Parts per million"
      }
    },
    "proportion_TiO2": {
      "wt%": {
        "name": "weight %",
        "help": "percentage by weight"
      },
      "ppm": {
        "name": "ppm",
        "help": "Parts per million"
      }
    },
    "boxType": {
      "n": {
        "name": "none",
        "help": "no box"
      },
      "o": {
        "name": "all",
        "help": "complete box"
      },
      "7": {
        "name": "top right",
        "help": "Top and right lines"
      },
      "L": {
        "name": "bottom left",
        "help": "Bottom and left lines"
      },
      "C": {
        "name": "open right",
        "help": "top, left and bottom lines"
      },
      "U": {
        "name": "open top",
        "help": "left, bottom and right lines"
      }
    },
    "bandwidth": {
      "nrd0": {
        "name": "Silverman",
        "help": "Silverman's rule of thumb"
      },
      "nrd": {
        "name": "Scott",
        "help": "Scott's variation of Silverman's rule of thumb"
      },
      "ucv": {
        "name": "UCV",
        "help": "Unbiased cross-validation"
      },
      "bcv": {
        "name": "BCV",
        "help": "Biased cross-validation"
      },
      "SJ": {
        "name": "Sheather & Jones",
        "help": "Using pilot estimation of derivatives"
      }
    }
  }
}
